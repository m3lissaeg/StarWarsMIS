<div class="col-lg-12 mb-4">

  <%= render 'layouts/notice' %>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h3 class="m-0 font-weight-bold text-primary">Ships</h3>
    </div>

    <div class="card-body">   
      <div class="table-responsive">
        <table class="table align-middle">

          <thead>
            <tr>
              <th>Name</th>
              <th>Features</th>
              <th>Actions </th>
            </tr>
          </thead>

          <tbody>
            <% @ships.each do |ship| %>
              <tr>
                <td><%= ship.name %></td>
                <td><%= ship.features %></td>
                <td>
                  <%= link_to 'Show', ship %> 
                  <% if current_user.admin? %>
                    <span>  |  </span>
                    <%= link_to 'Edit', edit_ship_path(ship) %> <span>  |  </span>
                    <%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>

      <%= link_to 'New Ship', new_ship_path if current_user.admin? %>
    </div>
  </div>
</div>
