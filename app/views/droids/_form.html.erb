<%= form_with(model: droid) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :model %>
    <%= form.text_field :model , class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :features %>
    <%= form.text_area :features , class: 'form-control' %>
  </div>
  </br>
  <div class="actions">
    <%= form.submit "Submit" , class: 'btn btn-primary' %>
  </div>
<% end %>
