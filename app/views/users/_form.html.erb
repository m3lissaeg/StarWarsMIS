<%= render "devise/shared/error_messages", resource: user %>

<%= form_with(model: user) do |f| %>
<div class="container">
  </br>

  <div class="row">
    <div class="col">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: 'form-control form-control-user'%>
    </div>
  </div>

  </br>

  <div class="form-group row">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" , class: 'form-control form-control-user'%>
    </div>

    <div class="form-group">
      <%= f.label :phone %><br />
      <%= f.telephone_field :phone, autocomplete: "phone" , class: 'form-control form-control-user'%>
    </div>


    <div class="form-group">
      <%= f.label :rank %><br />
      <%= f.text_field :rank, autocomplete: "rank" , class: 'form-control form-control-user'%>
    </div>


    <div class="form-group">
      <%= f.check_box :jedi %>
      <%= f.label :jedi, "Jedi" %>
      </br>
      <%= f.check_box :admin %>
      <%= f.label :admin, "Administrator" %>

    </div>


    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control form-control-user'%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control form-control-user'%>
    </div>

  </div>


  <div class="actions">
    <%= f.submit "Submit" , class: 'btn btn-primary' %>
  </div>

</div>
<% end %>
