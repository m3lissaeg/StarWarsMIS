<% if squad.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <div class="card-body">
      <h5><%= pluralize(squad.errors.count, "error") %> 
      prohibited this squad from being saved:</h5>

      <ul>
        <% squad.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_with(model: squad) do |form| %>
  <div class="container">
    <div class="row">
      <small class="form-text text-muted">
        Use Ctrl/Cmd or Shift to select multiple Crews for this Squad
      </small>
    </div>
    </br>

    <div class="row">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name , class: 'form-control' %>
      </div>
    </div>

    <div class="row">

      <div class="col">
        <div class="form-group">
          <label for="leader">Select the Leader for this Squad </label>
          <%= form.collection_select :leader_id, User.order(:name), :id, :name, 
              {include_blank: false}, {class: 'form-select form-select-sm'} %>
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <label for="crew">Select Crews: </label>
          <%= form.collection_select :crew_ids, Crew.order(:name), :id, :name, {include_blank: false}, 
            {class: 'form-select form-select-sm',size: '2',:multiple => true }  %>
          
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2">
        <div class="actions">
          <%= form.submit "Submit" , class: 'btn btn-primary' %>
        </div>

        <%= link_to 'Back', squads_path %>
      </div>
      
    </div>

  </div>
<% end %>
