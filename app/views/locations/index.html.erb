<div class="col-lg-12 mb-4">

  <%= render 'layouts/notice' %>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h3 class="m-0 font-weight-bold text-primary">Locations</h3>
    </div>

    <div class="card-body">   
      <div class="table-responsive">
        <table class="table align-middle">
    
          <thead>
            <tr>
              <th>System</th>
              <th>Coord</th>
              <th>Actions </th>
            </tr>
          </thead>
        
          <tbody>
            <% @locations.each do |location| %>
              <tr>
                <td><%= location.system %></td>
                <td><%= location.coord %></td>
                <td>
                  <%= link_to 'Show', location %> <span>  |  </span>
                  <%= link_to 'Edit', edit_location_path(location) %> <span>  |  </span>
                  <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
            
      <br>
            
      <%= link_to 'New Location', new_location_path %>
    </div>
    

  </div>
</div>
