<div class="col-lg-12 mb-4">

  <%= render 'layouts/notice' %>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h3 class="m-0 font-weight-bold text-primary">
        Crews for <%= link_to "Squad #{@squad.name}", mission_squad_path(@mission, @squad), target: :_blank %>
      </h3>
    </div>
    
    <div class="card-body">   
      <div class="container">
        <div class="row">
          <small class="form-text text-muted">
            Click "Show" to see all details about Droids, Rebels and Passengers for this Crew
          </small>
        </div>
      </div>
      </br>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Name    </th>
              <th>Ship    </th>
              <th>Droids  </th>
              <th>Actions </th>
            </tr>
          </thead>

          <tbody>
            <% @crews.each do |crew| %>
              <tr>
                <td><%= crew.name %></td>
                <td>
                  <%= crew.ship.name %>
                </td>
                
                <td>
                  <%= crew.droids.pluck(:name).join(', ') %>
                </td>


                <td>
                    <%= link_to 'Show', [@mission, @squad, crew]  %> <span>  |  </span>
                    <%= link_to 'Edit', edit_mission_squad_crew_path(@mission, @squad, crew) %> <span>  |  </span>
                    <%= link_to 'Destroy', [@mission, @squad, crew], method: :delete, data: { confirm: 'Are you sure?' } %> 
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    
      <br>
      <br>      

      <%= link_to 'New Crew', new_mission_squad_crew_path(@mission, @squad) %>
    </div>
    

  </div>
</div>
