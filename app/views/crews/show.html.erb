<%= render 'layouts/notice' %>

<div class="col-lg-12 mb-4">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h3 class="m-0 font-weight-bold text-primary">Crew</h3>
    </div>

    <div class="card-body">  
      <div class="container">
        <div class="row"> 
          <div class="col">
            <p>
              <strong>Name:</strong>
              <%= @crew.name %>
            </p>
          </div>
          
          <div class="col">  
            <p>   
              <strong>Ship:</strong>
              <%= @crew.ships.map(&:name).join(', ') %> 
            </p>              
          </div>

          <div class="col">  
            <p>   
              <strong>Droids:</strong>
              <%= @crew.droids.map(&:name).join(', ') %>
            </p>              
          </div>

        </div>

        <div class="row"> 
          <div class="col">  
            <p>   
              <strong>Rebels:</strong>
              <%= @crew.rebels.map(&:name).join(', ') %>
            </p>              
          </div>
        </div>


        <div class="row"> 
          <div class="col">  
            <p>   
              <strong>Passengers:</strong>
              <%= @crew.passengers.map(&:name).join(', ') %>
            </p>              
          </div>
        </div>
        
        <div> 
          <%= link_to 'Edit', edit_crew_path(@crew) %> |
          <%= link_to 'Back', crews_path %>
        </div>
        
      </div>

      
    </div>
  </div>
</div>
